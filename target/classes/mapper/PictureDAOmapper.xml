<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atlas.dao.PictureDAO">
    <update id="likept" parameterType="Picture">
        update picture set liked=liked+1 where pid=#{pid}
    </update>

    <update id="likept2" parameterType="Picture">
        update picture set liked=liked-1 where pid=#{pid}
    </update>

    <select id="recommendcat" parameterType="java.util.List" resultType="java.util.List">
        select p.*,c.name from picture p,cat c where p.cid=f.cid and p.cid in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="recommendflower" parameterType="java.util.List" resultType="java.util.List">
        select p.*,f.name from picture p,flower f where p.fid=f.fid and p.fid in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="findcid" resultType="Integer">
        select distinct cid from picture limit 15
    </select>

    <select id="findfid" resultType="Integer">
        select distinct fid from picture limit 15
    </select>


    <select id="catdetail" parameterType="Integer" resultType="Picture">
        select * from picture where cid=#{cid}
    </select>

    <select id="flowerdetail" parameterType="Integer" resultType="Picture">
        select * from picture where fid=#{fid}
    </select>

    <select id="findbypidcat" parameterType="java.util.List" resultType="Picture">
        select * from picture where cid in (select cid from cat) and pid in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="findbypidflower" parameterType="java.util.List" resultType="Picture">
        select * from picture where fid in (select fid from flower) and pid in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>