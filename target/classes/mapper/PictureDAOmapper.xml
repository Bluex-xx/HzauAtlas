<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atlas.dao.PictureDAO">
    <update id="likept" parameterType="Picture">
        update picture set liked=liked+1 where pid=#{pid}
    </update>

    <update id="likept2" parameterType="Picture">
        update picture set liked=liked-1 where pid=#{pid}
    </update>

    <select id="recommendcat" resultType="Picture">
        select * from picture where fid is null order by liked desc
    </select>

    <select id="recommendflower" resultType="Picture">
        select * from picture where cid is null order by liked desc
    </select>

    <select id="catdetail" parameterType="Integer" resultType="Picture">
        select * from picture where cid=#{cid}
    </select>

    <select id="flowerdetail" parameterType="Integer" resultType="Picture">
        select * from picture where fid=#{fid}
    </select>

    <select id="findbypidcat" parameterType="java.util.List" resultType="Picture">
        select * from picture where cid in (select cid from cat) and pid in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="findbypidflower" parameterType="java.util.List" resultType="Picture">
        select * from picture where fid in (select fid from flower) and pid in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>