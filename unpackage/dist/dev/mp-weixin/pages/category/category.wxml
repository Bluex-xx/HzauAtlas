<view><view class="header_img"><block wx:if="{{category}}"><image src="../../static/category_header_cat.png" mode="aspectFit"></image></block><block wx:else><image src="../../static/category_header_flower.png" mode="aspectFit"></image></block></view><view class="sideBar" style="z-index:999;"><view class="sideBar_trans"><button type="default" data-event-opts="{{[['tap',[['changeCategory',['$event']]]]]}}" bindtap="__e">切 换</button></view><block wx:for="{{selectContentList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="buttons"><button type="default" buttonName="{{index}}" data-event-opts="{{[['tap',[['selectCategory',[index]]]]]}}" bindtap="__e">{{item}}</button></view></block></view><view class="content"><view class="content_title">{{''+contentTitle+''}}<view class="content_title_line"></view></view><view class="content_main"><block wx:for="{{contentList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="*this"><view data-event-opts="{{[['tap',[['toList',[item.florescence||item.department||item.color]]]]]}}" class="content_main_item" bindtap="__e"><image class="content_main_item_image" src="{{item.picture.store}}" mode="aspectFill"></image><view hidden="{{!(category==0&&index==1&&item.florescence)}}" class="content_main_item_text">{{''+item.florescence+''}}</view><view hidden="{{!(category==0&&index==2&&item.department)}}" class="content_main_item_text">{{''+item.department+''}}</view><view hidden="{{!(category==1&&index==0&&item.color)}}" class="content_main_item_text">{{''+item.color+''}}</view></view></block></view></view></view>