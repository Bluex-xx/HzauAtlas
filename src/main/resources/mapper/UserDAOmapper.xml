<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atlas.dao.UserDAO">
    <select id="find" resultType="User">
        select user.profile_photo,user.name from user where openid=#{openid};
    </select>

    <update id="update" parameterType="User">
        update user set profile_photo=#{profile_photo},name=#{name} where openid=#{openid};
    </update>

    <insert id="insert" parameterType="User">
        insert into user(openid,profile_photo,name) values (#{openid},#{profile_photo},#{name})
    </insert>
</mapper>